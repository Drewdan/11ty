---
layout: archive.njk
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
---

<div class="section-title">
    #{{ tag }}
</div>

{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}

<div class="post-block">
    <h3 class="post-title">
        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
    </h3>
    <div class="post-summary">
        {{ post.data.excerpt }} ...
    </div>
    <div class="post-meta">
        <div class="meta-single">
            🗓 {{ post.data.date }}
        </div>
        <div class="meta-single">
            🏷 #{{ post.tags }}               
        </div>
        <div class="meta-single">
            ⏳ 37min read               
        </div>   
    </div>
</div>
{% endfor %}