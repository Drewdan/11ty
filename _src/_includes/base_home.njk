<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- head/meta goes here -->
        {% include "./_parts/head.njk" %}
        <!-- // -->
    </head>
    <body>
        <header>
            <!-- Header goes here -->
            {% include "./_parts/header.njk" %}
            <!-- // -->
        </header>
        <content id="home">
            <section id="intro_block" class="home-section">
                <div id="intro_heading">
                    {% renderFile "./_src/_includes/_parts/home/banner.md" %}
                </div>
                <div id="intro_android">
                    <img id="android_head" src="/img/aec.webp" width="140px" alt="android docs">
                    <p>Get started with Android Enterprise</p>
                    <a id="android_doc_link" href="/android">üìñ Read the docs</a>
                </div>
                <div id="intro_text">
                    <!--details>
                        <summary>About</summary-->
                        {{ content | safe }}
                    <!--/details-->
                </div>
            </section>

            <section id="notes" class="home-section">
                <h2 class="section-title">
                    Notes
                </h2>
                <div id="post_container">
                    <div class="post-column">
                    {% for post in collections.notes | reverse %}
                    {% if loop.index0 < 3 %}
                        <div class="post-block">
                            <div class="post-body">
                                <div class="post-meta post-meta-condensed">
                                    <div class="meta-single">
                                        <a class="blood-orange" href="{{ post.url | url }}">{{ post.data.title }}</a>
                                    </div>
                                </div>
                                {{ post.content | truncate(60) | safe}}
                                {% if post.data.excerpt|length %}
                                <div class="post-summary">
                                    {{ post.data.excerpt }}
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    {%- endif -%}
                    {%- endfor -%}
                    </div>
                    <div class="post-column">
                    {% for post in collections.notes | reverse | offset(3) %}
                    {% if loop.index0 < 3 %}
                        <div class="post-block">
                            <div class="post-body">
                                <div class="post-meta post-meta-condensed">
                                    <div class="meta-single">
                                        <a class="blood-orange" href="{{ post.url | url }}">{{ post.data.title }}</a>
                                    </div>
                                </div>
                                {{ post.content | truncate(60) | safe}}
                                {% if post.data.excerpt|length %}
                                <div class="post-summary">
                                    {{ post.data.excerpt }}
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}    
                    {% endfor %}
                    </div>
                    </div>
                </div>
                <h3 class="post-title post-archive">
                    <a class="button" href="/notes">üóíÔ∏è Notes ¬ª</a>
                </h3>
            </section>

            <section id="posts" class="home-section">
                <h2 class="section-title">
                    Latest articles 
                </h2>
                <div id="post_container">
                    <div class="post-column">
                    {% for post in collections.blog | reverse %}
                    {% if loop.index0 < 3 %}
                        <div class="post-block">
                            <div class="post-body">
                                <div class="post-meta post-meta-condensed">
                                    <div class="meta-single">
                                        {{ post.date | dateFull }}
                                    </div>
                                    <div class="meta-single">
                                        {% for tag in post.data.tags %}
                                        {% if not tag.includes("blog") %}
                                        #<a class="meta-tag" href="/tags/{{ tag | slugify }}/">{{ tag }}</a>
                                        {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                                <h3 class="post-title">
                                    <a href="{{ post.url | url }}">{{ post.data.title }}</a>
                                </h3>
                                {% if post.data.excerpt|length %}
                                <div class="post-summary">
                                    {{ post.data.excerpt }}
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    {%- endif -%}
                    {%- endfor -%}
                    </div>
                    <div class="post-column">
                    {% for post in collections.blog | reverse | offset(3) %}
                    {% if loop.index0 < 3 %}
                        <div class="post-block">
                            <div class="post-body">
                                <div class="post-meta post-meta-condensed">
                                    <div class="meta-single">
                                        {{ post.date | dateFull }}
                                    </div>
                                    <div class="meta-single">
                                        {% for tag in post.data.tags %}
                                        {% if not tag.includes("blog") %}
                                        #<a class="meta-tag" href="/tags/{{ tag | slugify }}/">{{ tag }}</a>
                                        {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                                <h3 class="post-title">
                                    <a href="{{ post.url | url }}">{{ post.data.title }}</a>
                                </h3>
                                {% if post.data.excerpt|length %}
                                <div class="post-summary">
                                    {{ post.data.excerpt }}
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}    
                    {% endfor %}
                    </div>
                </div>
                <h3 class="post-title post-archive">
                    <a class="button" href="/blog">‚úçÔ∏è View the archive ¬ª</a>
                </h3>
            </section>

            <section id="hero_banner" class="home-section">
                <h2 class="section-title">
                    Videos 
                </h2>
                <div id="af_group">
                    <div id="banner_left">
                        {% renderFile "./_src/_includes/_parts/home/bannertext.md" %}
                    </div>
                    <div id="banner_right">
                        <div id="af_text">
                            {% renderFile "./_src/_includes/_parts/home/video.md" %}
                        </div>
                    </div>
                </div>
                <div id="af_group_split">
                    <div id="video_left">
                        {% renderFile "./_src/_includes/_parts/home/video2.md" %}
                    </div>
                    <div id="banner_right">
                        <div id="video_right">
                            {% renderFile "./_src/_includes/_parts/home/video3.md" %}
                        </div>
                    </div>
                </div>
            </section>

            <section id="trusted_logos" class="home-section">
                <div id="trusted_container">
                    <div id="trusted_textgroup">
                        <h2 class="section-title">
                            Latest docs and resources
                        </h2>
                    </div>
                    <div id="doc_container">
                        {% for tag in android_tags %}
                        {% if loop.index0 < 3 %}
                        <div class="post-column">
                            {% set taglist = collections[ tag.name ] %}
                            {% for post in taglist | reverse %}
                            {% if loop.index0 < 4 %}
                            <div class="post-block">
                                <div class="post-body">
                                    <div class="post-meta post-meta-condensed">
                                        <div class="meta-single">
                                            {{ post.date | dateFull }}
                                        </div>
                                        <div class="meta-single">
                                            {% for tag in post.data.tags %}
                                            {% if not tag.includes("android-docs") %}
                                            #<a class="meta-tag" href="/tags/{{ tag | slugify }}/">{{ tag }}</a>
                                            {% endif %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <h3 class="post-title">
                                        <a href="{{ post.url }}">{{ post.data.title }}</a>
                                    </h3>
                                    {% if post.data.excerpt|length %}
                                    <div class="post-summary">
                                        {{ post.data.excerpt }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                            {% endif %}
                            {% endfor %}
                        </div>
                        {% endif %}
                        {% endfor %}
                    </div>
                </div>
                <h3 class="post-title post-archive">
                    <a class="button" href="/android">üìö View the docs ¬ª</a>
                </h3>
            </section>

        </content>
        <footer>
            {% include "./_parts/footer.njk" %}
        </footer>
    </body>
</html>
