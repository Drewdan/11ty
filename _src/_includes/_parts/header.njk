{% include "./banner.njk" %}
<nav>
    <div id="navbar">
        <div id="bayton_logo">
            <a class="bayton-logo-dynamic" href="/">
                {% include "../_assets/img/bayton_logos/bayton_rectangle_dynamic.svg" %}
            </a>    
        </div>
        <div id="nav_links" class="mobile-hidden">
            {% for link in globalnav %}
            <div class="nav-link-individual">
                <a class="{% if page.url != false and link.url in page.url %} active {% endif %}" href="{{ link.url }}">{{ link.text }}</a>
            </div>
            {% endfor %} 
        </div>
        <div id="corner_search">
            <a class="{% if page.url != false and '/search' in page.url %} active {% endif %}" href="/search/"><i class="fa fa-search"></i></a>
        </div>
        <div id="darktoggle">
            <i class="fas fa-eclipse"></i>
        </div>
        <div id="corner_menu">
            <div id="corner_menu_icon"><i class="fas fa-th-large"></i></div>
        </div>
    </div>
    <div id="menu_modal">
        <a class="bayton-logo-dynamic" href="/">
            {% include "../_assets/img/bayton_logos/bayton_circle_dynamic.svg" %}
        </a>
        <button id="menu_close">&times;</button>
        <ul>
            {% for item in globalnav %}
            <li><a href="{{ item.url }}">{{ item.text }}</a></li>
            {% endfor %}
        </ul>
        <div title="Clear darkmode preferences" id="clear-storage"><i class="fas fa-trash-alt"></i></div>
    </div>
</nav>
