<div class="aside-title increased-top-padding">
    <h2>Articles</h2>
</div>
{% for year, yearPosts in collections.postsByYear %}
<details {% if page.url != false and year in page.url %} open="" {% endif %}>
    <summary class="docnav-topic-title">
        {{ year }}     
    </summary>
    <ul>
        {% for post in yearPosts | reverse %}
        {% if post in collections.blog %}
        <li><a class="{{ 'active' if title == post.data.title }}" href="{{ post.url | url }}">{{ post.data.title }}</a></li>
        {% endif %}
        {% endfor %}
    </ul>
</details>
{% endfor %}